@charset "utf-8";
/* CSS Document */

body{background-color:#FCFCFC !important;}
a:link,a:hover,a:visited,a:active{
	outline-style:none;       /*解决bootstrap超链接点击时出现的虚边框*/
}
body{
	overflow-x: hidden;
}
#wrap{
	width:76% !important;
	min-width: 740px;
	height:auto;
	margin:0 auto;
}
.head{
	width:100%;
	height:70px;
	background-color:#66CFBC;
	/*box-shadow:0px -3px 4px #f3eeee inset;*/
}
#font{
	width:80%;
	height:70px;
	margin:0 auto;
	text-align:center;
}
#TheNew{
	float:left;
/*	color:#4a4646;*/
}
#date{
	float:right;
	margin-right: 10px;
}
.date{
	float:right;
	margin-right: 10px;
	color:gray;
	width:23%;
}
.name{
	line-height:70px;
	text-align:center;
	font-size:32px;
	font-family:'华文新魏';
	color:#FFF;
}
.slide {
	width:100%;
	height:auto;
	margin:38px auto;
	overflow:hidden;
}
.slide img {
	width:100%;
	height:350px;
}
#content1{
	height:240px;
	box-shadow: -5px 0px 6px #d2cfcf;
}
.news{
	width:81%;
	height:240px;
	float:left;
	overflow:hidden;
}
.news1{
	padding-top: 8px;
	margin-right: 2%;
	width:48%;
	height: 100%;
	float:left;
}
.news_head{
	width:98%;
	margin:0 auto;
	height:30px;
	border-bottom:2px solid #0C9;	
}
.news_title{
/*	width:30%;*/
    padding:2px 10px;
	height:30px;
	line-height:30px;
	font-size: 14px;
	float:left;
}
.news_more{
	width:20%;
	margin-top: 8px;
	height:20px;
	text-align: center;
	font-size: 14px;
	line-height:20px;
	float:right;
	display:block;   
	white-space:nowrap; 
	overflow:hidden; 
	text-overflow:ellipsis;
}
.NewName{
	margin-top:8px;
	padding-left:15px;
}
.NewName li{
	height:46px;
	line-height:46px;
	border-bottom: 1px solid #E6E6E6;
	white-space:nowrap;
	overflow:hidden; 
	text-overflow:ellipsis;
	font-size: 16px;
}
.TheName{
	height:36px !important;
	line-height: 36px !important;
}
.Tnum{
	color:#fc9106;
	margin-left:6%;
}
.NewStyle{
	background-color:#FFDF4A; 
	padding:3px 10px; 
	cursor: pointer;
	border-left:5px solid #FBA208;
	border-radius: 2px 0 0 2px;
}
.login{
	padding:5px;
	width:18%;
	height:240px;
	float:right;
	text-align: center;
	border:1px solid orange;
	border-radius:5px;
	box-shadow: -6px 0px 30px #fcbb40 inset;
}
.login img{
	z-index: -1;
}
.user{
	width:100%;
	height:30%; 
	margin-top: 5%; 
	vertical-align:middle;
}
.user a{
	/*margin-top:30px;*/
	line-height:70px;
	font-size: 15px;
	padding-bottom: 5px;
	cursor:pointer;
	text-decoration:underline;
}
.About{
	margin:10px auto;
	margin-top: 38px;
	padding:0;
	/*height:350px;*/
	/*border:1px solid black;*/
	position: relative;
	overflow:hidden;
	background-color: #f8f8f8;
}
.aboutBg{
	margin:0px auto;
	padding-top:0.5px;
	width:200px;
	height:52px;
	text-align:center;
	color:#fff;
	font-weight:bold;
	background-position: center;
	background-size: 100%;
	background-repeat: no-repeat;
}
.aboutBg h3 a{
	color:#fff;
}
.aboutBg h3 a:hover{
	color:#fff;
	text-decoration: none;
}
.about_head{
	width:100px;
	margin:2px auto;
	padding:5px 10px;
	background:#151515;
	color:#F60;
    text-align:center;	
}
.About p{
	margin:0 auto;
	padding:5px 15px;
	text-align:center;
}
#Team{
  position: absolute;
  width:3500px;
  margin:0 auto;
}
.teamIfo a{
	color:#2d2b2b;
	font-weight: bold;
	text-decoration: none;
}
.group{
	float:left;
	width:16%;
	/*height:250px;*/
	height:auto;
	/*border:1px solid black;*/
	margin-left:10px;
	padding-top: 10px;	
}
.pic{
	width:94%;
	margin:0 auto;
	height:170px;
	border-radius:50%;
	overflow:hidden;
}
.pic img{
	width:100% !important;
	height:100% !important;
	margin:0 auto;	
	border-radius: 50%;
	border:4px solid #74c9c9;
}
.Oname{
	width:96px;
	height:40px;
	background-color: #211f1f;
	background-color: #f8f8f8;
	margin:18px auto;
	text-align:center;
	padding: 10px;
	font-size: 16px;
	border-bottom: 4px solid #4fc0b4;
}
.Oname:hover{
	background-color: #4fc0b4;
	background-color: #82d8db;
	border-radius: 5px 5px 0 0;
}
.Oname a{
	text-decoration: none;
	color:orange;
	letter-spacing: 4px;
	font-weight: bolder;
}
#foot{
	width:100%;
	height:100px;
	background-color:#66CFBC;
	border-top: 4px solid #fcaf3a;
}
#copyRight{
	height:30px;
	line-height:30px;
	color:white;
	width:1000px;
	margin:auto;
	text-align: center;
}
.NewName li{
    background-image: url(<?=Url::base()?>/front/img/newsriqi.png);
    background-position:0px 10px;
    background-repeat: no-repeat;
    padding-left: 10px;
    border-bottom:1px solid #E6E6E6;
}
.NewName li a{
	width:74%;
	white-space:nowrap; 
	overflow:hidden; 
	text-overflow:ellipsis;
}
.group{
  width:200px;
}
#friend-a{
	width:75%;
	height:60px;
	margin:0 auto;
	margin-left: 30%;
	text-align: center;
}
#friend-a a{
	font-weight: 600;
	height:20px;
	margin-top: 20px;
	padding-right: 15px;
	float:left;
	margin-right: 15px;
	color:#fff;
	border-right: 1px solid #fff;
}
#friend-a a:last-child{
	border:none;
}
